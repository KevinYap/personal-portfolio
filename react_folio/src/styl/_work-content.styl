.work-content
	margin 0 auto
	padding-top 10px
	+from-width(640px)
		center(960px)
	
	.work-listing
		margin 30px auto
		+from-width(640px)
			margin 60px auto
		
		figure.work-block
			stack()
			max-width 260px
			height 260px
			margin 30px auto
			transform-style preserve-3d
			transition 0.3s ease-in-out
			position relative
			+from-width(640px)
				col(1/3, cycle:3)
				margin-top 15px
				margin-bottom 15px
				max-width 100%
				height 300px
				
			.touch &
				+from-width(1024px, orientation: landscape)
					col(1/3, cycle:3)
					margin 15px 6px
					max-width 300px
					height 300px
				+from-width(640px, orientation: portrait)
					col(1/2, cycle:2)
					margin 15px 6px
					max-width 300px
					height 300px
			
			.work
				width 100%
				height 260px
				text-align center
				padding 20px
				position absolute
				top 0
				left 0
				z-index 10
				border-radius 600px
				border 1px solid #ccc
				backface-visibility hidden
				transform rotateY(0deg)
				transition 0.3s ease-in-out
				+from-width(640px)
					max-width 300px
					height 300px
				// +from-width(640px)
				// 	height 260px
					
				.touch & 
					max-width 260px
					height 260px
					transform rotateY(180deg)
					backface-visibility visible
					+from-width(768px)
						height 300px
					+from-width(640px)
						height 260px
				
				img
					vertical-align()	
			
			.work-description
				width 100%
				height 260px
				border-radius 600px
				border 1px solid #ccc
				position absolute
				top 0
				left 0
				backface-visibility hidden
				transform rotateY(180deg)
				transition 0.3s ease-in-out
				+from-width(640px)
					max-width 300px
					height 300px
				// +from-width(640px)
				// 	height 260px
					
				.touch & 
					max-width 260px
					height 260px
					transform rotateY(0deg)
					backface-visibility visible
					+from-width(768px)
						height 300px
					+from-width(640px)
						height 260px
						transform rotateY(180deg)
				
				span
					width 100%
					text-align center
				
				a
					transition 0.3s ease-in-out
					display block
					margin 0 auto
					padding 10px
					text-align center
					width 170px
					letter-spacing 3px
					vertical-align()
					set-font-size(16px)
		
		// Background color for odd number block
		.work-block:nth-child(odd)
			.work
				background-color #202020
				color #fff !important
			
			.work-description
				background-color #202020
				color #fff !important
				a
					border 2px solid #fff
					background-color inherit
					box-shadow 4px 4px #666
					+from-width(640px)
						box-shadow 0 0
				
				a:hover
					.no-touch &
						background-color #fff
						color #202020
						box-shadow 4px 4px #666
		
		// Background color for even number block
		.work-block:nth-child(even)
			.work
				background-color #fff
				color #202020 !important
			
			.work-description
				background-color #fff
				color #202020 !important
				a
					border 2px solid #202020
					background-color inherit
					.no-touch &
						box-shadow 0 0
				
				a:hover
					.no-touch &
						background-color #202020
						color #fff
						box-shadow 4px 4px #666
		
		.work-block:hover > .work
			// .no-touch &
			transform rotateY(180deg)
		
		.work-block:hover > .work-description
			// .no-touch &
			transform rotateY(0deg)
		
		.hover_effect
			transform rotateY(180deg)
	
	//add class to even block or odd block when hover
	.work-white
		// +from-width(1024px)
		background-color #fff !important
		filter grayscale(100%) !important
		transition 0.3s ease-in-out
	
	.work-black
		// +from-width(1024px)
		background-color #202020 !important
		filter grayscale(100%) !important
		transition 0.3s ease-in-out

.work-inner-content
	width 100%
	margin 0 auto
	padding-top 10px
	+from-width(640px)
		max-width 960px
	
	> p
		max-width 100%
	
	.screenshot-content
		margin-bottom 20px
		padding 0 20px
		text-align center
		+from-width(1024px)
			padding 0
		
		.img-content
			stack()
			+from-width(1024px)
				col(1/2, cycle:2)
			
		img
			margin-bottom 20px
			border 1px solid #ccc
			+from-width(640px)
				margin-bottom 40px
			
		img:first-child
			+from-width(640px)
				margin-top 20px