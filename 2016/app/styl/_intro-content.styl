.intro-content
	center(100vw)
	margin 0 auto 50px auto
	height 100vh
	text-align center
	position relative
	padding 35vh 20px 0 20px
	background url('../../img/bg-dark.jpg') center no-repeat #101010
	background-size cover
	span
		display inline
		padding 8px
		line-height 3.4
		text-transform uppercase
		set-font-size(13px)
		font-family raleway
		letter-spacing 5px
		font-weight 600
		box-decoration-break clone
		background-color #fff
		color #fff
		+from-width(640px)
			line-height 3
			padding 10px 15px
			set-font-size(20px)
		
	.show-out, .show-out2, .show-out3
		animation shadowOut 0.6s ease-in-out
		animation-fill-mode both
	
	.show-out
		animation-delay 1s
	
	.show-out2
		animation-delay 1.3s
	
	.show-out3
		animation-delay 1.6s
	
	.scroll-down-indicator:before
		content 'scroll'
		display block
		color #fff
		set-font-size(12px)
		text-transform lowercase
		font-family open-sans
		position absolute
		top -35px
		left -16px
		letter-spacing 1px
	
	.scroll-down-indicator
		animation 2.5s bounce ease-in-out infinite
		position absolute
		bottom 20px
		left 0
		right 0
		margin 0 auto
		width 0
		height 0
		border-style solid
		border-width 10px 10px 0 10px
		border-color #fff transparent transparent transparent
		+from-width(1024px)
			border-width 15px 15px 0 15px
		
	&.project-intro
		margin 0 auto 20px auto
		+from-width(1024px)
			padding 22vh 20px 0 20px
			height 50vh
		
	&.lexus-rsvp
		background url('../../img/lexus/header_bg.jpg') 70% no-repeat #101010
		background-size cover
		+from-width(1024px)
			background-position center
	
	&.hsd
