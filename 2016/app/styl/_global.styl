lightBlue = #3498db
header-color = #000

::-moz-selection
	background #ccc
::selection
	background #ccc
	
*, *:before, *:after
	box-sizing border-box

img
	max-width 100%
  
body
	font-family raleway
	font-weight 400
	overflow hidden
	font-size 14px

.hover
	//user can't select when in mobile
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none
	-webkit-touch-callout none        

.back-to-top:hover
	+from-width(640px)
		border-bottom 1px solid #101010

.back-to-top:hover > span
	+from-width(640px)
		background-color #101010
		top 15px

.back-to-top
	display none
	position fixed
	bottom 40px
	right 40px
	width 30px
	height 30px
	border-bottom 1px solid #3498db
	cursor pointer
	overflow hidden
	span
		display block
		position absolute
		top 20px
		left 0
		width 30px
		height 30px
		transform rotate(-45deg)
		background-color #3498db
		transition 0.3s ease-in-out

a
	font-weight 600
	font-family raleway
	text-decoration none
	text-transform uppercase
	color inherit
	set-font-size(12px)
	+from-width(640px)
		set-font-size(16px)

a.primary
	width 250px
	border 2px solid #212121
	letter-spacing 3px
	padding 10px
	margin 0 auto
	display block
	text-align center
	margin-top 25px
	transition 0.3s ease-in-out
	box-shadow 0 0
	+from-width(640px)
		width 315px
	.touch &
		box-shadow 4px 4px #666
	&.project
		margin 30px auto
	+from-width(640px)
			margin 50px auto

.no-touch &
	a.primary:hover
		color #fff
		background-color #212121
		box-shadow 4px 4px #666

a.link
	text-decoration underline
	text-transform lowercase
	font-size inherit
	font-weight inherit

h1
	text-align center
	font-family raleway
	font-weight 600
	text-transform uppercase
	set-font-size(22px)
	letter-spacing 3px
	color #000

h2
	text-align center
	font-family raleway
	font-weight 600
	text-transform uppercase
	set-font-size(18px)
	letter-spacing 3px
	color #000

.diagonal-pattern
	width 60px
	margin 25px auto
	text-align center
	cursor pointer
	span
		display block
		width 10px
		height 10px
		border 1px solid lightBlue
		transform rotate(45deg)
		float left
		margin-right 2px
		transition 0.3s ease-in-out

.no-touch &
	.diagonal-pattern:hover > span
		transform rotate(-45deg)

p
	text-align center
	set-font-size(16px)
	font-weight 300
	font-family open-sans
	color #000
	padding 0 20px
	margin 0 auto
	line-height 1.7
	+from-width(1024px)
		set-font-size(14px)
		padding 0
		max-width 580px

sup
	set-font-size(11px)
	font-weight 400